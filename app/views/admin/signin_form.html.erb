<html>
	<head>
		<title>Entrada al sistema</title>
	</head>
	<body>
		<% if flash[:notice] %>
			<div class="errors">
					<%= flash[:notice] %>
			</div>
		<% end %>
	<br>
	<% form_tag(:action => "signin") do %>
			
			<label for="username">Username:</label>
			<%= text_field_tag "username" %><br />
			
			<label for="password">Password:</label>
			<%= password_field_tag "password" %><br />
			
			<%= submit_tag "Entrar" %>
		<% end %> 
		<br>
			
	</body>
</html>