<html>
	<head>
		<title>Signin for Admin Access</title>
	</head>
	<body>
		<% form_tag(:action => "signin") do %>
			
			<label for="username">Username:</label>
			<%= text_field_tag "username" %><br />
			
			<label for="password">Password:</label>
			<%= password_field_tag "password" %><br />
			
			<%= submit_tag "Entrar" %>
		<% end %> 
	</body>
</html>